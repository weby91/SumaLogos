<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SmallTextSize">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegisterButton" parent="SmallTextSize">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="SocmedLogin" parent="RegisterButton">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="GoogleLogin" parent="RegisterButton">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SeekbarGradient">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_gradient_dark_green</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>

</resources>
